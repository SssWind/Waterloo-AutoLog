{
  "manifest_version": 2,
  "name": "Waterloo AutoLog",
  "version": "1.2.0",
  "author": "Zijian Shao",
  "background": {
    "scripts": [
      "js/configs.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "24": "icon/icon24.png",
      "32": "icon/icon32.png"
    },
    "default_popup": "html/popup.html",
    "default_title": "Waterloo AutoLog"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/configs.js",
        "js/hash.js",
        "js/init.js"
      ],
      "matches": [
        "*://cas.uwaterloo.ca/*",
        "*://idp.uwaterloo.ca/*",
        "*://idm.uwaterloo.ca/*",
        "*://ecewo.uwaterloo.ca/*",
        "*://watcard.uwaterloo.ca/*",
        "*://myhrinfo.hrms.uwaterloo.ca/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/init_idle.js"
      ],
      "matches": [
        "*://cas.uwaterloo.ca/*",
        "*://idp.uwaterloo.ca/*",
        "*://idm.uwaterloo.ca/*",
        "*://ecewo.uwaterloo.ca/*",
        "*://watcard.uwaterloo.ca/*",
        "*://myhrinfo.hrms.uwaterloo.ca/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "Automatic login for Quest, WaterlooWorks, Learn, WatIAM, WatCard, myHRinfo and many other campus systems.",
  "icons": {
    "128": "icon/icon128.png",
    "16": "icon/icon16.png",
    "48": "icon/icon48.png"
  },
  "options_ui": {
    "page": "html/options.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://cas.uwaterloo.ca/*",
    "*://idp.uwaterloo.ca/*",
    "*://idm.uwaterloo.ca/*",
    "*://ecewo.uwaterloo.ca/*",
    "*://watcard.uwaterloo.ca/*",
    "*://myhrinfo.hrms.uwaterloo.ca/*"
  ],
  "short_name": "Waterloo AutoLog",
  "applications": {
    "gecko": {
      "id": "waterlooautolog@zijianshao.com",
      "strict_min_version": "57.0"
    }
  }
}
